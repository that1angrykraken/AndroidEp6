<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="user"
            type="seamonster.kraken.androidep6.data.User" />
        <import type="seamonster.kraken.androidep6.util.BindingUtils"/>
    </data>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:clickable="true">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="6dp">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/imageUserPicture"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:background="?colorPrimary"
                android:contentDescription="@{user.name.title + ` ` + user.name.first + ` picture`}"
                android:scaleType="fitCenter"/>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/textName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{user.name.title +`. ` + user.name.first + ` ` + user.name.last}"
                android:textAppearance="?textAppearanceListItem"/>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/textAgeAndGender"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@{user.dob.age + `, ` + user.gender}"
                android:textAppearance="?textAppearanceListItemSecondary"/>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/textEmail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@{BindingUtils.fromHtml(`&lt;b&gt;Contact:&lt;/b&gt; ` + user.phone + `, ` + user.email)}"/>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/textLocation"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@{BindingUtils.fromHtml(`&lt;b&gt;Address:&lt;/b&gt; ` + user.location.street.name + `, ` + user.location.city + `, ` + user.location.country)}"
                />
        </androidx.appcompat.widget.LinearLayoutCompat>
    </com.google.android.material.card.MaterialCardView>
</layout>